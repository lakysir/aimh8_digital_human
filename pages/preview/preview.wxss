.container{display:flex;flex-direction:column;height:100vh;background-color:#000;position:relative}.video-container{flex:1;display:flex;justify-content:center;align-items:center}.video-player{width:100%;height:100%}.title-bar{padding:20rpx 30rpx;background-color:rgba(0,0,0,.5)}.title{color:#fff;font-size:32rpx}.control-bar{display:flex;padding:20rpx 30rpx;background-color:#222}.back-btn,.switch-btn,.share-btn,.download-btn{padding:15rpx 30rpx;font-size:28rpx;border-radius:50rpx;margin-right:20rpx}.back-btn{background-color:#555;color:#fff}.switch-btn{background-color:#2b85e4;color:#fff}.share-btn{background-color:#19be6b;color:#fff}.download-btn{background-color:#f90;color:#fff}.loading-mask,.error-mask{position:absolute;top:0;left:0;right:0;bottom:0;display:flex;flex-direction:column;justify-content:center;align-items:center;background-color:rgba(0,0,0,.7);z-index:100}.loading-spinner{width:80rpx;height:80rpx;border:6rpx solid rgba(255,255,255,.3);border-top:6rpx solid #fff;border-radius:50%;animation:spin 1s linear infinite;margin-bottom:30rpx}@keyframes spin{0%{transform:rotate(0)}to{transform:rotate(360deg)}}.loading-text,.error-text{color:#fff;font-size:30rpx}.error-icon{font-size:80rpx;margin-bottom:20rpx}.error-text{margin-bottom:30rpx}.retry-btn{background-color:#2b85e4;color:#fff;padding:15rpx 40rpx;font-size:28rpx;border-radius:50rpx}.download-mask{position:absolute;top:0;left:0;right:0;bottom:0;background-color:rgba(0,0,0,.7);z-index:100;display:flex;justify-content:center;align-items:center}.download-content{background-color:#fff;padding:40rpx;border-radius:20rpx;text-align:center}.download-title{font-size:32rpx;margin-bottom:20rpx}.progress-bar{width:100%;height:20rpx;background-color:#ddd;border-radius:10rpx;margin-bottom:20rpx}.progress-inner{height:100%;background-color:#2b85e4;border-radius:10rpx}.download-percentage{font-size:28rpx;margin-bottom:20rpx}.cancel-btn{background-color:#2b85e4;color:#fff;padding:15rpx 40rpx;font-size:28rpx;border-radius: