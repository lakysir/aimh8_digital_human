.container{padding:30rpx;background-color:#fff;min-height:100vh;display:flex;flex-direction:column}.header{display:flex;justify-content:center;margin-bottom:50rpx;padding-top:20rpx}.title{font-size:40rpx;font-weight:700;color:#333;position:relative}.title:after{content:"";position:absolute;bottom:-16rpx;left:50%;transform:translate(-50%);width:80rpx;height:6rpx;background-color:#2b85e4;border-radius:3rpx}.contact-info{display:flex;flex-direction:column;align-items:center;gap:40rpx;padding:30rpx;margin-top:30rpx}.contact-item{width:80%;background-color:#f8f9fa;border-radius:12rpx;padding:40rpx 30rpx;display:flex;flex-direction:column;align-items:center;box-shadow:0 4rpx 12rpx rgba(0,0,0,.05)}.contact-icon{font-size:60rpx;margin-bottom:20rpx}.contact-type{font-size:32rpx;font-weight:700;color:#2b85e4;margin-bottom:15rpx}.contact-value{font-size:28rpx;color:#666}.footer{margin-top:auto;padding-top:40rpx;display:flex;flex-direction:column;align-items:center}.copyright{font-size:24rpx;color:#999}
