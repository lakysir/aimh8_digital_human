.container{padding:30rpx;background-color:#fff;min-height:100vh}.header{display:flex;justify-content:center;margin-bottom:50rpx;padding-top:20rpx}.title{font-size:40rpx;font-weight:700;color:#333;position:relative}.title:after{content:"";position:absolute;bottom:-16rpx;left:50%;transform:translate(-50%);width:80rpx;height:6rpx;background-color:#2b85e4;border-radius:3rpx}.section{margin-bottom:50rpx}.section-title{font-size:32rpx;font-weight:700;color:#2b85e4;margin-bottom:20rpx;padding-left:20rpx;border-left:8rpx solid #2B85E4}.section-content{background-color:#f8f9fa;padding:30rpx;border-radius:12rpx;box-shadow:0 4rpx 12rpx rgba(0,0,0,.05)}.paragraph{font-size:28rpx;color:#666;line-height:1.8;text-align:justify}.tech-showcase{display:grid;grid-template-columns:repeat(2,1fr);grid-gap:20rpx;margin-bottom:60rpx}.tech-item{background-color:#f8f9fa;border-radius:12rpx;padding:30rpx;display:flex;flex-direction:column;align-items:center;box-shadow:0 4rpx 12rpx rgba(0,0,0,.05)}.tech-icon{font-size:60rpx;margin-bottom:20rpx}.tech-name{font-size:28rpx;color:#333;font-weight:700}.company-values{display:flex;justify-content:space-between;margin-bottom:60rpx}.value-item{width:28%;background:linear-gradient(135deg,#2b85e4,#5ea7ff);border-radius:12rpx;padding:30rpx 20rpx;color:#fff;text-align:center;box-shadow:0 4rpx 12rpx rgba(43,133,228,.3)}.value-title{font-size:32rpx;font-weight:700;margin-bottom:10rpx}.value-desc{font-size:24rpx;opacity:.9}.footer{margin-top:80rpx;padding-top:40rpx;border-top:2rpx solid #EEEEEE;display:flex;flex-direction:column;align-items:center}.copyright{font-size:24rpx;color:#999;margin-bottom:20rpx}.footer-links{display:flex;justify-content:center;align-items:center}.footer-link{font-size:24rpx;color:#2b85e4;margin:0 10rpx}
